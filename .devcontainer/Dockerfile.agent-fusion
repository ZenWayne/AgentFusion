# AgentFusion Base Dockerfile
FROM python:3.11-slim

# Tag this image for use by database MCP server
# This builds the base dependencies needed for both agent_fusion and agent_fusion_mcp

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONPATH=/app/python/packages/agent_fusion/src

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    postgresql-client \
    libpq-dev \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy the agent_fusion package
COPY python/packages/agent_fusion/ /app/python/packages/agent_fusion/

# Install agent_fusion package in editable mode
RUN pip install -e /app/python/packages/agent_fusion/

# Create a non-root user
RUN useradd --create-home --shell /bin/bash mcpuser
USER mcpuser

# Expose default port for general use (optional)
EXPOSE 8000

# Set default command for container
CMD ["bash"]